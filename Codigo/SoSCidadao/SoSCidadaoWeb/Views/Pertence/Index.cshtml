@model IEnumerable<SosCidadaoWeb.Models.PertenceModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPertence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusPertence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOcorrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoPertence)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPertence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusPertence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOcorrencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoPertence)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdPertence }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdPertence }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdPertence })
            </td>
        </tr>
}
    </tbody>
</table>
