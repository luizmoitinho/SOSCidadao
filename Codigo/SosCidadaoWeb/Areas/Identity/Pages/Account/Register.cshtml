@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar Conta";
    ViewBag.isBannerHidden = false;
    ViewBag.isBannerFull = true;
}


<div class="d-flex justify-content-center">
    <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 bg-white align-content-center rounded shadow p-2" id="box-main">
        <div class="row">
            <div class="col-md-12">
                <h2>Criar Conta</h2>
                <hr />
            </div>
        </div>
        <div class="row">
            <form asp-route-returnUrl="@Model.ReturnUrl"  class="col-12" method="post">
                <div class="col-12 d-flex justify-content-center">
                    <div class="align-content-center">
                        
                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-8 d-flex justify-content-between">
                       
                        <div type="submit" class="btn btn-primary btn-sm btn-block btn-blue-secundary col-3">
                            @Html.ActionLink("Voltar", "Index", "Home")
                        </div>
                            <button type="submit" class="btn btn-primary btn-sm btn-block btn-blue-default col-3 mt-0 ">Criar</button>
                        </div>
                </div>
            </form>
        </div>
    </div>
</div>








