@model IEnumerable<Core.DTO.PertenceDTO>

@{
    ViewData["Title"] = "Index_DTO";
    Layout = "_LayoutDashboard";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nº Cadastral
            </th>
            <th>
                Nome
            </th>
            <th>
                Descricao
            </th>
            <th>
                Status
            </th>
            <th>
                Ocorrencia
            </th>
            <th>
                Tipo Pertence
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPertence)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusPertence)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOcorrencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomePertence)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdPertence }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdPertence }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.IdPertence })
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="7" class=" text-center">
                <h4 class="p-5">Não foram encontrados registros no momento.</h4>
            </td>
        </tr>
    }
</table>
